{
  "name": "Zappening",
  "version": "0.1",
  "description": "STAY ON TASK",
  "background": {
    "persistent": false,
    "scripts": [
      "lib/sugar.min.js",
      "zappening.js",
      "background.js"
    ]
  },
  "permissions": [
    "webNavigation", "storage", "notifications",
    "http://pomodorozap.com/*"
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
